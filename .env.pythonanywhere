# Environment Variables for PythonAnywhere Deployment
# Add these in the Web tab -> Environment variables section

# Database Configuration (SQLite for free tier)
DATABASE_URL=sqlite:///shadi.db

# Flask Configuration
SECRET_KEY=your-very-secure-secret-key-here-change-this
FLASK_ENV=production
FLASK_DEBUG=False

# Email Configuration (for email verification)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-not-regular-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Application Settings
UPLOAD_FOLDER=app/static/images
MAX_CONTENT_LENGTH=16777216

# Admin Configuration
ADMIN_EMAIL=your-admin-email@gmail.com
ADMIN_PASSWORD=your-secure-admin-password

# Payment Configuration
PAYMENT_AMOUNT=500
ADMIN_EASYPAISA_NUMBER=03001234567
