# AlwaysData Production Environment Variables
# Replace the placeholder values with your actual AlwaysData credentials

# Database Configuration
DATABASE_URL=mysql://yourusername_admin:your_password@mysql-yourusername.alwaysdata.net/yourusername_shadi_db

# Flask Configuration
SECRET_KEY=your-very-secure-secret-key-here-change-this
FLASK_ENV=production
FLASK_DEBUG=False

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Application Settings
UPLOAD_FOLDER=app/static/images
MAX_CONTENT_LENGTH=16777216

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password

# Payment Configuration
PAYMENT_AMOUNT=500
ADMIN_EASYPAISA_NUMBER=03001234567
