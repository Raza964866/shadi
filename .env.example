# Environment Variables Template for AlwaysData
# Copy this file to .env and fill in your actual values

# Database Configuration (AlwaysData provides MySQL/PostgreSQL)
# MySQL: mysql://username:password@mysql-username.alwaysdata.net/username_databasename
# PostgreSQL: postgresql://username:password@postgresql-username.alwaysdata.net/username_databasename
DATABASE_URL=mysql://username:password@mysql-username.alwaysdata.net/username_databasename

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=production
FLASK_DEBUG=False

# Email Configuration (for email verification)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Application Settings
UPLOAD_FOLDER=app/static/images
MAX_CONTENT_LENGTH=16777216

# Admin Configuration
ADMIN_EMAIL=your-admin-email@gmail.com
ADMIN_PASSWORD=your-secure-admin-password

# Payment Configuration
PAYMENT_AMOUNT=500
ADMIN_EASYPAISA_NUMBER=03001234567
